/var/log/vyos-webui/*.log {
    daily
    rotate 14
    compress
    delaycompress
    missingok
    notifempty
    create 0640 vyos-webui vyos-webui
    sharedscripts
    postrotate
        if [ -f /run/vyos-webui.pid ]; then
            kill -USR1 $(cat /run/vyos-webui.pid) 2>/dev/null || true
        fi
        systemctl reload vyos-webui >/dev/null 2>&1 || true
    endscript
}
