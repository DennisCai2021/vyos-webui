#!/bin/bash
set -e

case "$1" in
    purge)
        # Remove everything
        rm -rf /opt/vyos-webui || true
        rm -rf /etc/vyos-webui || true
        systemctl daemon-reload || true
        ;;
    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        # Keep configuration and data on remove/upgrade
        ;;
esac

exit 0
